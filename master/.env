REDIS_AOF_FSYNC=everysec
REDIS_MAXMEMORY=256mb
REDIS_EVICTION_POLICY=volatile-lru

# Backend queue integration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis-queue:${REDIS_PORT}/0
TRAINING_QUEUE_NAME=training-queue
RESULTS_QUEUE_NAME=results-queue