WORKDIR_HOST=C:\\home\\Projects\\proteinx_infra\\workdir_master
WORKDIR_CONTAINER=/data
FRONTEND_PORT=80

# JWT 配置
JWT_SECRET=replace-with-a-very-strong-random-secret
ACCESS_TOKEN_EXPIRE_MINUTES=20
REFRESH_TOKEN_EXPIRE_DAYS=7

# 登录失败封禁策略
AUTH_FAIL_THRESHOLD=3
AUTH_FAIL_WINDOW_MINUTES=5
